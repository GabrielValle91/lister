<h1>Your Lists</h1>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th colspan="5"></th>
        </tr>
    </thead>
    <tbody>
        <% @lists.each do |list| %>
            <tr id="<%= dom_id list %>">
                <th><%= list.title %></th>
                <td><%= list.description %></td>
                <td><%= list.completed %></td>
                <td><%= link_to "Show this list", list %></td>
                <td><%= link_to "Edit this list", edit_list_path(list) %></td>
                <td><%= button_to "Destroy this list", list, method: :delete, class:"btn btn-danger btn-sm" %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<%= link_to "New list", new_list_path, class:"btn btn-secondary" %>
