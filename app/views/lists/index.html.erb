<h1>Your Lists</h1>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @lists.each do |list| %>
            <tr id="<%= dom_id list %>">
                <th><%= link_to list.title, list %></th>
                <td><%= list.description %></td>
                <td><%= list.completed %></td>
                <td><%= link_to  "Delete", list, data:{"turbo-method": :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-outline-danger btn-sm" %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<%= link_to "New list", new_list_path, class:"btn btn-secondary" %>
